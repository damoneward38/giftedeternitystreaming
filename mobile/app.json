{
  "expo": {
    "name": "Gifted Eternity",
    "slug": "gifted-eternity",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.giftedeternitty.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.giftedeternitty.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Gifted Eternity to access your microphone for recording."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Gifted Eternity to access your photos.",
          "savePhotosPermission": "Allow Gifted Eternity to save photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#7c3aed"
        }
      ]
    ],
    "extra": {
      "apiUrl": "https://api.giftedeternitty.com",
      "wsUrl": "wss://ws.giftedeternitty.com"
    }
  }
}
